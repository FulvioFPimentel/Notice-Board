package com.bigcrowd.noticeBoard.controllers.services;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.bigcrowd.noticeBoard.dto.MeetingDTO;
import com.bigcrowd.noticeBoard.entities.Meeting;
import com.bigcrowd.noticeBoard.repositories.MeetingRepository;

@Service
public class MeetingService {
	
	@Autowired
	private MeetingRepository meetingRepository;
	
	
	public List<MeetingDTO> findAll() {
		List<Meeting> meeting = meetingRepository.findAll();
		return meeting.stream().map(x -> new MeetingDTO(x)).collect(Collectors.toList());
	}

}
