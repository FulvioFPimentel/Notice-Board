package com.bigcrowd.noticeBoard.repositories;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.bigcrowd.noticeBoard.entities.Session;
import com.bigcrowd.noticeBoard.entities.SubSession;

@Repository
public interface SubSessionRepository extends JpaRepository<SubSession, Long> {

	@Query("SELECT obj FROM SubSession obj WHERE :session IS NULL OR obj.session = :session")
	List<SubSession> findSubSessionsWithSession(Session session);

}
