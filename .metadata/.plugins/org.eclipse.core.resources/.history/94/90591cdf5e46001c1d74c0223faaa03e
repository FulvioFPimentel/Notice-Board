package com.bigcrowd.noticeBoard.dto;

import java.io.Serializable;

import com.bigcrowd.noticeBoard.entities.Prayer;

public class PrayerDTO implements Serializable {
	private static final long serialVersionUID = 1L;
	
	private Long id;
	private String moment;
	private PersonDTO person;
	
	public PrayerDTO() {
	}

	public PrayerDTO(Long id, String moment, String people) {
		this.id = id;
		this.moment = moment;
		this.person = person;
	}
	
	public PrayerDTO(Prayer prayers) {
		this.id = prayers.getId();
		this.moment = prayers.getMoment();
		this.person = prayers.getPerson();
	}
	
	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getMoment() {
		return moment;
	}

	public void setMoment(String moment) {
		this.moment = moment;
	}

	public String getPeople() {
		return people;
	}

	public void setPeople(String people) {
		this.people = people;
	}
	
}
